<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
    @if (Model.HasPassword)
            {
        <a asp-controller="Manage" asp-action="ChangePassword" class="btn btn-info">Change Password</a>
    }
    else
    {
        <a asp-controller="Manage" asp-action="SetPassword" class="button">Create Password</a>
    }

