@model Tomataboard.Models.EmailViewModels.MessageViewModel
@{
    ViewData["Subject"] = $"{Model.Title} password reset";

    ViewData["Text"] =
        "Hello there,\n\n" +
        $"Someone recently requested a password change for your {Model.Title} account. If this was you, you can set a new password by clicking this link:\n\n" +
        $"{Model.CallbackUrl}\n\n" +
        "If you don't want to change your password or didn't request this, just ignore and delete this message.\n\n" +
        "Thanks!\n\n" +
        $"-The {Model.Title} Team";
}